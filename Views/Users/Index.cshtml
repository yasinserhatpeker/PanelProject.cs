@model IEnumerable<AppUser>
<h2>Users List</h2>
<hr>
<table class="table table-bordered table-sm">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Email</th>
            <th></th>
        </tr>
        @if(Model.Count() ==0) {
 
                           }
    </thead>
                      
    <tbody>
        @if(Model.Count() ==0) {
    <tr><td colspan="4" class="text-center">No Role</td></tr>
}
        @foreach(var user in Model) {

            <tr>
                <td>@user.Id</td>
                <td>@user.FullName</td>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td>
                    <a asp-controller="Users" asp-action="Edit" asp-route-id="@user.Id" class="btn btn-primary">Edit</a>

                    <form asp-action="Delete" method="post" onsubmit="return confirm('Are you sure?')" style="display:inline-block;">
                    <input type="hidden" name="Id" value="@user.Id">
                    <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>