@model AppRole

<h2>Update the Role</h2>
<hr>
<form asp-action="Edit" method="post">
<input type="hidden" name="Id" value="@Model.Id">
<div asp-validation-summary="All" class="text-danger"></div>

<div class="mb-3">
<label asp-for="Name" class="form-label"></label>
<input asp-for="Name" class="form-control">


<button class="btn btn-outline-primary mt-3" type="submit">Update</button>
</form>

<table class="table table-bordered table-sm">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Email</th>
            <th style="width:80px;"></th>
        </tr>
      
    </thead>
                      
    <tbody>
    @if(ViewBag.Users != null) {
        @if(ViewBag.Users.Count == 0) {
       <tr><td colspan="4" class="text-center">No Role</td></tr>
        }
        @foreach(var user in ViewBag.Users ) {

            <tr>
                <td>@user.Id</td>
                <td>@user.FullName</td>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                
              <td>
                <div class="mx-5">
                     
                    <a asp-controller="Users" asp-action="Edit" asp-route-id="@user.Id" class="btn btn-primary">Edit</a>
                </div>
                  
              </td>  
            </tr>
        }
}
    </tbody>
</table>